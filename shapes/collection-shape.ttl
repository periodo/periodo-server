@base <http://n2t.net/ark:/99152/> .

@prefix periodo: <p0v#> .

@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix time: <http://www.w3.org/2006/time#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

periodo:CollectionShape
  rdf:type sh:NodeShape ;
  rdfs:label "Period collection shape" ;
  sh:targetClass skos:ConceptScheme ;
  sh:closed "true"^^xsd:boolean ;
  sh:ignoredProperties (
    rdf:type
    ) ;
  sh:property
    periodo:CollectionSourceShape ,
    periodo:CollectionEditorialNoteShape ,
    periodo:CollectionSameAsShape
  .

periodo:CollectionSourceShape
  rdf:type sh:PropertyShape ;
  sh:path dcterms:source ;
  sh:name "source" ;
  sh:description "Bibliographic description of the source" ;
  sh:nodeKind sh:BlankNodeOrIRI ;
  sh:node periodo:SourceShape ;
  sh:minCount 1 ;
  sh:maxCount 1 ;
  sh:message "Problem with collection source" ;
  .

periodo:CollectionEditorialNoteShape
  rdf:type sh:PropertyShape ;
  sh:path skos:editorialNote ;
  sh:name "editorial note" ;
  sh:description "Administrative or editorial notes from PeriodO curators" ;
  sh:datatype xsd:string ;
  sh:maxCount 1 ;
  sh:message "Problem with collection editorial note" ;
  .

periodo:CollectionSameAsShape
  rdf:type sh:PropertyShape ;
  sh:path owl:sameAs ;
  sh:name "same as" ;
  sh:description "Alternative URI for this collection" ;
  sh:nodeKind sh:IRI ;
  sh:message "Problem with collection alternative URI (sameAs" ;
  .
